# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[**/*.{cmd,bat,ps1}]
end_of_line = crlf

# files in test-suite
[**/*.crlf]
end_of_line = crlf
