%include "packages/packages"

%ifdef GNU
OBJ=$(addprefix $(OBJDIR)/,$(subst .c,.o,$(SRC)))

$(OBJDIR)/%.o: %.c
	$(CC) -I$(OBJDIR) -I.. $(CFLAGS) -o $@ -c $<
%else
.c.$(O):
	$(CC) $(CFLAGS) -I.. -c $*.c
%endif

all: $(OBJ)

%ifdef GNU
$(OBJDIR)/db.o: db.c
	$(CC) -I$(OBJDIR) -I.. -I/usr/include/mysql $(CFLAGS) -o $@ -c $<
%else
db.$(O): db.c
	$(CC) $(CFLAGS) -I.. -I/usr/include/mysql -c $*.c
%endif

clean:
	rm -f *.$(O)
	rm -f packages.$(A)
