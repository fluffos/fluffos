-include packages

# @configure_input@
@SET_MAKE@

CXX=@CXX@
CXXFLAGS=@CXXFLAGS@
YACC=@YACC@
O=@OBJEXT@
DRIVER_BIN=@DRIVER_BIN@
INSTALL=@INSTALL@
INSTALL_DIR=@bindir@
OPTIMIZE=@OPTIMIZE@

.cc.$(O):
	$(CXX) -c -I.. $(CXXFLAGS) -MMD -MP -x c++ -o $@ $<

-include $(SRC:.cc=.d)

all: $(OBJ)

# crypto
crypto.$(O): crypto.cc
	$(CXX) -c $(CXXFLAGS) -I.. @OPENSSL_INCLUDES@ -x c++ -o $@ $<

# special db stuff
db.$(O): db.cc
	$(CXX) -c $(CXXFLAGS) -I.. @MYSQL_CFLAGS@ @POSTGRESQL_CFLAGS@ @SQLITE3_CFLAGS@ -x c++ -o $@ $<

# pcre
pcre.$(O): pcre.cc
	$(CXX) -c $(CXXFLAGS) -I.. @PCRE_CFLAGS@ -x c++ -o $@ $<

clean:
	-rm -f *.d
	-rm -f *.$(O)
